<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTopLogin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/white_login"
            android:text="로그인"
            android:textSize="17dp"
            android:textColor="#FE393A"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTopJoin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/gray_join"
            android:text="회원가입"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:useDefaultMargins="true"
            android:id="@+id/LoginLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:text="회원로그인" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@layout/border"
                android:padding="7dp"
                android:hint="이메일" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호"
                android:background="@layout/border"
                android:padding="7dp"
                android:inputType="textPassword|textMultiLine" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인 유지" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FE393A"
                android:layout_marginTop="71dp"
                android:fontFamily="sans-serif"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btnNaverlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@layout/border"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:text="네이버로그인"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/JoinLayout"
            android:useDefaultMargins="true"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:text="회원가입" />

            <EditText
                android:id="@+id/join_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@layout/border"
                android:padding="7dp"
                android:hint="이메일" />

            <EditText
                android:id="@+id/join_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호"
                android:background="@layout/border"
                android:padding="7dp"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/inputPassTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호 확인"
                android:background="@layout/border"
                android:padding="7dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnjoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FE393A"
                android:layout_marginTop="65dp"
                android:fontFamily="sans-serif"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:typeface="sans" />

        </GridLayout>
    </FrameLayout>
</LinearLayout>